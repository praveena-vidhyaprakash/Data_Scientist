import java.util.scanner;
   class javademo {
    public static void main(String args[])
    {
        scanner ok= new scanner(system.in);
        int a = ok.nextint();
        int b = ok.nextint();
        int c = ok.nextint();
        int d = a*b*c;
        int e = a+b+c;
        system.out.print(d/e);
    }
   }